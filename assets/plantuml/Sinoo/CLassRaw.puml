    + Get(): void
}
class InventoryReceiptItem {
    + ID: string
    + quantity: int
    + import_price: double
    + total_price: double
}

class Gallary {
    + ID: string
    + image: string
    + description: string
    + acitive: bool
}

class Category {
    + ID: string
