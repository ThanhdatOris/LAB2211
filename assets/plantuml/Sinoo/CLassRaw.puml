class CartItem {
    + ID: string
    + quantity: int
    + price: double
}
class Order {
    + ID: string
    + total_price: double
    + order_date: date
    + order_status: int
    'Method
    + PlaceOrder(): void
    + CancelOrder(): void
    + UpdateStatus(): void
}

class OrderItem {
    + ID: string
    + quantity: int
    + price: double
    
    'Method
    + Get(): void
}

