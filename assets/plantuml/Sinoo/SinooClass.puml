'--- Export ---
class Cart {
    + ID: string
    + totalPrice: double
    'Method
    + AddItem(): void
    + RemoveItem(): void
    + CalculateTotal(): void
    + ClearCart(): void
}

class CartItem {
    + ID: string
    + quantity: int
    + price: double
}

class Order {
    + ID: string
    + customer_phone_number: string
    + total_price: double
    + order_date: date
    + order_status: int

    'Method
    + PlaceOrder(): void
    + CancelOrder(): void
    + UpdateStatus(): void
