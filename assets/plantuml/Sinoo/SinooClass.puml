' --------------- UC ---------------
class Product {
    + ID: string
    + name: string
    + price: double
    + unit: string
    + material: string
    + dimensions: string
    + standard: string
    + color: string
    + style: string
    + brand: string
    + warranty_period : string
    + description: string
